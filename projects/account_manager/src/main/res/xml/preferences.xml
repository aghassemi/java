<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_category_settings"/>
    <Preference
        android:title="@string/pref_identity_service_subcategory">
        <intent
            android:targetPackage="io.v.android.apps.account_manager"
            android:targetClass="io.v.android.apps.account_manager.SettingsActivity"
            android:action="io.v.android.apps.account_manager.SETTINGS"/>
    </Preference>

    <PreferenceCategory android:title="@string/pref_category_blessing_management"/>
    <Preference
        android:title="@string/pref_blessing_request_subcategory">
        <intent
            android:targetPackage="io.v.android.apps.account_manager"
            android:targetClass="io.v.android.apps.account_manager.BlesseeRequestActivity"
            android:action="io.v.android.apps.account_manager.REQUEST_BLESSINGS"/>
    </Preference>

    <Preference
        android:title="@string/pref_blesser_grant">
        <intent
            android:targetPackage="io.v.android.apps.account_manager"
            android:targetClass="io.v.android.apps.account_manager.BlesserGrantActivity"
            android:action="io.v.android.apps.account_manager.GRANT_BLESSINGS"/>
    </Preference>

    <Preference
        android:title="@string/pref_blessing_store_subcategory">
        <intent
            android:targetPackage="io.v.android.apps.account_manager"
            android:targetClass="io.v.android.apps.account_manager.BlessingStoreDisplayActivity"
            android:action="io.v.android.apps.account_manager.BLESSING_STORE_DISPLAY"/>
    </Preference>
</PreferenceScreen>